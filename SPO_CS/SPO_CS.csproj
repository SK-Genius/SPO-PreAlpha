<Project Sdk="Microsoft.NET.Sdk">
	
	<PropertyGroup>
		<TargetFramework>netcoreapp3.1</TargetFramework>
		<OutputType>Exe</OutputType> <!--  Exe | Library | Module | Winexe -->
		<IsTestProject>true</IsTestProject>
		<DefineConstants>noMY_TRACE;NUNIT</DefineConstants>
		<NoWarn>659,661</NoWarn>
	</PropertyGroup>
	
	<ItemGroup>
		<PackageReference Include="NUnit" Version="3.11.0" />
		<PackageReference Include="NUnit3TestAdapter" Version="3.13.0" />
		<!--
		<PackageReference Include="OpenCover" Version="4.7.*" />
		<PackageReference Include="Microsoft.NET.Test.Sdk" Version="16.4.0" />
		-->
		
		<TestSrc Include="**\*.Tests.cs" />
		<Compile Update="@(TestSrc)">
			<DependentUpon>$([System.String]::new('%(Filename)').Replace('.Tests', '')).cs</DependentUpon>
		</Compile>
	</ItemGroup>
	
</Project>
